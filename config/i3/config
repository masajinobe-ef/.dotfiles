### ======================= i3 Settings ======================= ###

# Font Setting
font pango:JetBrainsMono Nerd Font 10

# Window Borders
for_window [class="^.*"] border pixel 3
default_border pixel 3
default_floating_border none

# Gaps between Windows
gaps inner 0
gaps outer 0

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"

# Refresh i3status
set $refresh_i3status killall -SIGUSR1 i3status

# Mod Key
set $mod Mod1



### ======================= i3 Bar Configuration ======================= ###

bar {
    position top
    status_command i3status

    colors {
        background #282a36
        statusline #f8f8f2

        focused_workspace  #ff79c6 #282a36
        active_workspace   #8be9fd #282a36
        inactive_workspace #f8f8f2 #44475a
        urgent_workspace   #ff5555 #282a36
        separator #44475a
    }
}

client.focused                #ffffff #ffffff #ffffff
client.focused_inactive       #8be9fd #8be9fd #8be9fd
client.unfocused              #000000 #000000 #000000
client.urgent                 #ff5555 #ff5555 #ff5555
client.placeholder            #282a36 #282a36 #282a36



### ======================= i3 Keybindings ======================= ###

# Restart, Reload, Exit, Kill
bindsym $mod+Control+c reload
bindsym $mod+Control+r restart
bindsym $mod+Control+q exec "i3-msg exit"
bindsym $mod+q kill

# Switch between workspaces
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6

# Focus Control
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move Focusable Windows
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Move Focusable to Workspaces
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6

# Split Windows
bindsym $mod+0 split h
bindsym $mod+9 split v

# Toggle Fullscreen
bindsym $mod+s fullscreen toggle

# Toggle Floating
floating_modifier $mod
bindsym $mod+Shift+f floating toggle

# Resize Focused
mode "resize" {
    bindsym l resize shrink width 5 px or 5 ppt
    bindsym k resize grow height 5 px or 5 ppt
    bindsym j resize shrink height 5 px or 5 ppt
    bindsym h resize grow width 5 px or 5 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Control+s mode "resize"



### ======================= Window Rules ======================= ###

# Assign Applications to Workspaces
assign [class="^Alacritty$"] 1
assign [class="^Chromium$"] 2
assign [class="^TelegramDesktop$"] 3

# Floating and specific Rules for Windows
for_window [instance="^.*Picture in picture$"] floating enable, sticky enable, border none, resize set 640 360, move position 1920 0
for_window [class="^MEGAsync$"] floating enable


### ======================= Xorg Settings ======================= ###

# Fix cursor
exec --no-startup-id xsetroot -cursor_name left_ptr

# Set keyboard repeat rate
exec --no-startup-id xset r rate 180 50

# Set resolution
exec --no-startup-id xrandr --output DP-1 --mode 1920x1080 --rate 144



### ======================= User Autorun ======================= ###

exec --no-startup-id pgrep -x telegram-desktop >/dev/null || telegram-desktop &
exec --no-startup-id pgrep -x chromium >/dev/null || chromium &
exec --no-startup-id pgrep -x alacritty >/dev/null || alacritty &
#exec --no-startup-id pgrep -x udiskie >/dev/null || udiskie --no-automount --tray &



### ======================= Start Environment ======================= ###

exec --no-startup-id pgrep -x picom >/dev/null || picom --config ~/.config/picom/picom.conf &
exec --no-startup-id pgrep -x dunst >/dev/null || dunst --config ~/.config/dunst/dunstrc &
exec --no-startup-id pgrep -x "polkit-gnome-au" >/dev/null || /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
exec --no-startup-id pgrep -x feh >/dev/null || feh --recursive --bg-fill --no-fehbg --randomize ~/Wallpapers/* &



### ======================= User Keybindings ======================= ###

# Chromium
bindsym $mod+w exec chromium

# Alacritty
bindsym $mod+Return exec alacritty

# Music Player
bindsym $mod+m exec alacritty -e "ncmpcpp"

# File Manager
bindsym $mod+e exec alacritty -e "yazi"

# Launcher
bindsym $mod+r exec --no-startup-id rofi -show combi -combi-modes drun

# Zoomer
bindsym $mod+z exec --no-startup-id ~/.local/bin/boomer

# Power Menu
bindsym Mod4+p exec --no-startup-id rofi -show power-menu -modi "power-menu:$HOME/.local/scripts/rofi-power-menu --choices=shutdown/reboot/logout"

# WIFI Menu
bindsym Mod4+w exec --no-startup-id sh ~/.local/scripts/rofi-wifi-menu &

# Music Control
bindsym $mod+F9 exec --no-startup-id sh ~/.local/scripts/mpctrl --toggle &
bindsym $mod+F11 exec --no-startup-id sh ~/.local/scripts/mpctrl --up &
bindsym $mod+F10 exec --no-startup-id sh ~/.local/scripts/mpctrl --down &
bindsym Control+F11 exec --no-startup-id sh ~/.local/scripts/mpctrl --next &
bindsym Control+F10 exec --no-startup-id sh ~/.local/scripts/mpctrl --prev &

# Screenshot
bindsym $mod+equal exec --no-startup-id sh ~/.local/scripts/screenshot --save &
bindsym $mod+minus exec --no-startup-id sh ~/.local/scripts/screenshot --clipboard &

# Microphone Toggle
bindsym $mod+grave exec --no-startup-id sh ~/.local/scripts/microphone && $refresh_i3status

# Volume Control
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status

